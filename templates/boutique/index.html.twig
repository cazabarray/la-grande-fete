{% extends 'base.html.twig' %}

{% block title %}Boutique | {{ parent() }}{% endblock %}

{% block body %}
    <div class="boutique">
        <ul>
            {% for article in articles %}
                <li>
                    <a href="#" class="article">
                        {% if article.image %}
                            <div class="image" style="background-image: url('{{ asset('images/' ~ article.image) }}')"></div>
                        {% else %}
                            <div class="image" style="background-image: url('{{ asset('images/logotype.png') }}')"></div>
                        {% endif %}
                        
                        <div class="contenu">
                            <p>{{ article.nom }}</p>
                            <p>{{ article.prix }} â‚¬</p>
                        </div>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
