{% extends 'base.html.twig' %}

{% block title %}Boutique | {{ parent() }}{% endblock %}

{% block body %}
    <div class="boutique">
        <a href="{{ path('app_boutique') }}" class="retour">Retour à la boutique</a>

        <div class="ficheproduit">
            
            <div class="image">
                {% if article.image %}
                    <div class="background" style="background-image: url('{{ asset('images/' ~ article.image) }}')"></div>
                {% else %}
                    <div class="background" style="background-image: url('{{ asset('images/logotype.png') }}')"></div>
                {% endif %}
            </div>

            <div class="contenu">
                <h1>{{ article.nom }}</h1>
                <p>{{ article.description }}</p>
                <p><strong>{{ article.prix }} €</strong></p>

                <form action="{{ path('app_panier_ajout', { id: article.id }) }}" method="POST">
                    {% if article.type.nom == 'Vêtement' %}
                        <label for="taille">Taille :</label>
                        <select name="taille" id="taille" required>
                            <option value="">Choisir une taille</option>
                            <option value="S">S</option>
                            <option value="M">M</option>
                            <option value="L">L</option>
                            <option value="XL">XL</option>
                        </select>
                    {% endif %}
                    
                    <button type="submit">Ajouter au panier</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
